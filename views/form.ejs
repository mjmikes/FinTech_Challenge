function displayPlatformLoading(service) {
    // Show platform logo and loading animation
    document.getElementById('platform-loading').style.display = 'block';  // Show loading
    document.getElementById('platform-auth-container').style.display = 'block'; // Ensure the container is visible
    document.getElementById('platform-loading').classList.add('flash'); // Start flashing logo

    setTimeout(() => {
        document.getElementById('platform-loading').style.display = 'none';  // Hide loading animation
        document.getElementById('platform-logo').classList.remove('flash'); // Stop flashing logo
        displayLoginForm('platform', service); // Display login form after loading
    }, 3000);  // Delay for 2 seconds (simulate loading)
}

function displayBankLoading(service) {
    // Show bank logo and loading animation
    document.getElementById('bank-loading').style.display = 'block';  // Show loading
    document.getElementById('bank-auth-container').style.display = 'block'; // Ensure the container is visible
    document.getElementById('bank-loading').classList.add('flash'); // Start flashing logo

    setTimeout(() => {
        document.getElementById('bank-loading').style.display = 'none';  // Hide loading animation
        document.getElementById('bank-logo').classList.remove('flash'); // Stop flashing logo
        displayLoginForm('bank', service); // Display login form after loading
    }, 3000);  // Delay for 2 seconds (simulate loading)
}



function displayLoginForm(type, service) {
    const formHtml = `
        <h3 style="font-family: 'Poppins', sans-serif; font-weight: 600; font-size: 24px;">Login to ${service}</h3>
        <input type="text" placeholder="Username" id="${type}-${service}-username" />
        <input type="password" placeholder="Password" id="${type}-${service}-password" />
        <button type="button" onclick="performLogin('${type}', '${service}')">Login</button>
    `;
    document.getElementById(`${type}-login-form`).innerHTML = formHtml;
    document.getElementById(`${type}-login-form`).style.display = 'block';
}

function performLogin(type, service) {
    // Get username and password values
    const username = document.getElementById(`${type}-${service}-username`).value;
    const password = document.getElementById(`${type}-${service}-password`).value;

    // Log the login attempt (for debugging)
    console.log(`Logging in to ${service} with username ${username} and password ${password}`);

    // Hide the login form
    document.getElementById(`${type}-login-form`).style.display = 'none';

    // Show the loading spinner
    document.getElementById(`${type}-login-loading`).style.display = 'block';  // Show spinner

    // Simulate login process with a delay
    setTimeout(() => {
        // Hide the loading spinner
        document.getElementById(`${type}-login-loading`).style.display = 'none';

        // Show the service icon and green checkmark
        if (type === 'platform') {
            document.getElementById('platform-login-status').style.display = 'flex';  // Show the platform status container
            document.getElementById('platform-service-icon').src = `images/${service}.png`; // Set the platform icon
            document.getElementById('platform-service-icon').style.display = 'inline';
            document.getElementById('platform-check-icon').style.display = 'inline';  // Show the green checkmark
        } else if (type === 'bank') {
            document.getElementById('bank-login-status').style.display = 'flex';  // Show the bank status container
            document.getElementById('bank-service-icon').src = `images/${service}.png`; // Set the bank icon
            document.getElementById('bank-service-icon').style.display = 'inline';
            document.getElementById('bank-check-icon').style.display = 'inline';  // Show the green checkmark
        }
    }, 2000);  // Simulate a delay for 2 seconds
}




