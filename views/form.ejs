const button = document.getElementById('reliaRateBtn');

// Add an event listener to enable the button when the checkbox is checked
checkbox.addEventListener('change', function() {
    if (checkbox.checked) {
        button.disabled = false;  // Enable the button
        button.style.cursor = 'pointer';  // Change cursor to pointer
    } else {
        button.disabled = true;  // Disable the button
        button.style.cursor = 'not-allowed';  // Change cursor to not-allowed
